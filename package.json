{
  "name": "rendition",
  "version": "18.3.0",
  "description": "React components library",
  "repository": {
    "type": "git",
    "url": "https://github.com/balena-io-modules/rendition"
  },
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "module": "./dist_esm5/index.js",
  "sideEffects": false,
  "files": [
    "dist/",
    "dist_esm5/",
    "docs/",
    "README.md"
  ],
  "engines": {
    "node": ">=10.13.0",
    "npm": ">=5.7.0"
  },
  "scripts": {
    "tsify-css": "npm install && node ./scripts/tsifyCss.js",
    "dev": "npm run build && npm run start",
    "start": "start-storybook -p 6006",
    "build:cjs": "rimraf dist && tsc",
    "build:esm5": "rimraf dist_esm5 && tsc -p ./tsconfig.esm5.json",
    "build:docs": "node ./scripts/generateDocs.js",
    "build": "npm run tsify-css && npm run build:cjs && npm run build:esm5 && npm run build:docs",
    "generate-screenshots": "./scripts/generate-screenshots.sh",
    "generate-snapshots": "npm run build && npm run jest -- -u",
    "build:storybook": "build-storybook -o .out",
    "catch-uncommitted": "catch-uncommitted --catch-no-git --skip-node-versionbot-changes",
    "test:fast": "npm run lint && npm run jest",
    "test:fast:watch": "npm run lint && npm run jest:watch",
    "test": "npm run build && npm run test:fast && npm run catch-uncommitted",
    "test:local-visual": "./scripts/test-screenshots.sh",
    "test:visual": "npm run ci:screenshot -- -o .reg/current && reg-cli .reg/current __screenshots__ .reg/diff -R .reg/report.html",
    "jest": "jest --maxWorkers=4",
    "jest:watch": "jest --maxWorkers=4 --watch",
    "eslint": "eslint src .storybook",
    "eslint-fix": "eslint src .storybook --fix",
    "tslint": "balena-lint --typescript src",
    "tslint-fix": "balena-lint --typescript --fix src",
    "lint": "npm run eslint && npm run tslint",
    "precommit": "lint-staged",
    "prepack": "npm run build",
    "prettify-js": "prettier --config .prettierrc-js --write \"src/**/*.js\"",
    "prettify": "npm run prettify-js && npm run eslint-fix && npm run tslint-fix",
    "ci:screenshot": "storycap http://localhost:6006 --serverTimeout 100000 --captureTimeout 10000 --disableCssAnimation --serverCmd \"npm run start\"",
    "deploy": "npm run build:storybook && gh-pages -d .out"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/plugin-transform-react-jsx": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@balena/lint": "^5.0.4",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "@types/googlemaps": "^3.39.7",
    "@types/highlightjs": "^9.12.0",
    "@types/jest": "^24.0.25",
    "@types/react": "^16.8.8",
    "@types/react-dom": "^16.8.3",
    "@types/react-google-recaptcha": "^1.1.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.0-beta.6",
    "catch-uncommitted": "^1.4.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "eslint": "^4.13.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "gh-pages": "2.0.0",
    "git-url-parse": "^7.0.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-canvas-mock": "^1.1.0",
    "jest-styled-components": "^7.0.0",
    "jsdom": "^11.6.2",
    "lint-staged": "^4.1.1",
    "match-media-mock": "^0.1.1",
    "monaco-editor-webpack-plugin": "^1.9.0",
    "prettier": "^2.3.0",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-test-renderer": "^16.8.5",
    "reg-cli": "^0.13.0-beta.1",
    "rimraf": "^2.6.2",
    "sinon": "^4.5.0",
    "storybook-readme": "5.0.3",
    "storycap": "2.3.2",
    "strip-css-comments": "^3.0.0",
    "ts-jest": "^24.3.0",
    "ts-loader": "^5.3.0",
    "ts-node": "^8.0.2",
    "typescript": "^3.9.6",
    "webpack": "^4.41.5",
    "zxcvbn": "^4.4.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-regular-svg-icons": "^5.11.2",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@fortawesome/react-fontawesome": "^0.1.5",
    "@mapbox/rehype-prism": "^0.5.0",
    "@react-google-maps/api": "^1.9.7",
    "@rjsf/core": "raniglas/react-jsonschema-form#autocapitalize_support_v2_2_1",
    "@types/ajv-keywords": "^3.4.0",
    "@types/color": "^3.0.0",
    "@types/json-schema": "^7.0.5",
    "@types/lodash": "^4.14.77",
    "@types/node": "^13.13.4",
    "@types/prop-types": "^15.7.0",
    "@types/react-helmet": "^6.0.0",
    "@types/recompose": "^0.26.2",
    "@types/styled-components": "^5.0.1",
    "@types/styled-system": "^4.0.0",
    "@types/uuid": "^3.4.3",
    "ajv": "^6.12.3",
    "ajv-keywords": "^3.3.0",
    "color": "^3.1.2",
    "color-hash": "^1.0.3",
    "copy-to-clipboard": "^3.0.8",
    "grommet": "raniglas/grommet#autocapitalize_support_2_14_0",
    "json-e": "^4.1.0",
    "hast-util-sanitize": "^3.0.0",
    "lodash": "^4.17.11",
    "mermaid": "8.4.0",
    "prismjs": "^1.21.0",
    "prop-types": "^15.7.2",
    "react-google-recaptcha": "^2.0.0-rc.1",
    "react-helmet": "^6.0.0",
    "react-monaco-editor": "^0.39.1",
    "react-notifications-component": "^2.2.3",
    "react-simplemde-editor": "^4.1.1",
    "recompose": "0.26.0",
    "regex-parser": "^2.2.7",
    "rehype-raw": "^4.0.2",
    "rehype-react": "^6.1.0",
    "rehype-sanitize": "^3.0.1",
    "remark-parse": "^8.0.3",
    "remark-rehype": "^7.0.0",
    "resize-observer": "^1.0.0",
    "styled-components": "^5.0.1",
    "styled-system": "^4.1.0",
    "tslib": "^2.0.0",
    "unified": "^9.1.0",
    "uuid": "^3.2.1",
    "xterm": "^4.8.1",
    "xterm-addon-fit": "^0.4.0"
  },
  "lint-staged": {
    "{package.json, package-lock.json}": [
      "npm run tsify-css",
      "git add ./src/components/Terminal/XTermDefaultStyle.ts"
    ],
    "{src, test}/**/*.js": [
      "prettier --config .prettierrc-js --write",
      "eslint --fix",
      "git add"
    ],
    "*.{ts,tsx}": [
      "balena-lint --typescript --fix",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-babel",
    "collectCoverage": true,
    "verbose": true,
    "setupFiles": [
      "jest-canvas-mock",
      "<rootDir>scripts/setupTests.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>scripts/setupTestsAfterEnv.js"
    ],
    "snapshotResolver": "<rootDir>scripts/setupSnapshotsPath.js",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "identity-obj-proxy"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  }
}
